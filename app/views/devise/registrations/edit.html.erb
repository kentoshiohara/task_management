<div class="editPage">
  <div class="titleArea">
    <h1>Edit Account</h1>
  </div>
  <div class='container'>
    <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), method: :put, class: "mt-5, editForm",local: true do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="text-center">
        <%= f.submit "Update", class: "btn submitBtn" %>
      </div>
    <% end %>
  </div>
</div>

