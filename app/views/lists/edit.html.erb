<div class="listeditPage">
  <div class="container">
    <%= form_with model: @list, url: list_path, class: 'listForm', local: true do |f| %>
      <% if @list.errors.any? %>
        <p class="text-danger">Title must be between 1 and 255 characters</p>
      <% end %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control listName", placeholder: "list name" %>
      <div class="text-center"><%= f.submit "Edit", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>