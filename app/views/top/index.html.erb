<div class="topPage">
  <div class="listWrapper">
    <% @lists.each do |list| %>
      <div class="list">
        <div class="list_header">
          <h2 class="list_header_title"><%= list.title %></h2>

            <div class="list_header_action">
            <%= link_to list_path(list), method: :delete, data: {confirm: "#{list.title}を削除しても大丈夫ですか？"} do %>
            <i class="fas fa-trash"></i>
            <% end%>
            <%# <%= link_to(content_tag(:i, '', class: 'fas fa-pen'), edit_list_path(list)) %>
            <%= link_to edit_list_path(list), method: :get do %>
            <i class="fas fa-pen"></i>
            <% end%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
